	<!-- Resource Types definition -->
	<resource_type id="MaintainableArtefact">
		<doc title="maintTypeDoc" xml:lang="en">The MaintainableArtefact resource type defines the common behaviour for all the maintainable artefacts, which inherit from it.</doc>
			<param name="agencyID" style="template" required="false" default="all"/>
    		<param name="resourceID" style="template" required="false" default="all"/> 
    		<param name="version" style="template" required="false" default="latest"/>
		<method name="GET" id="maintainableArtefactQuery"> 
			<request> 
				<param name="detail" style="query" default="full"/>
				<param name="references" style="query" default="none"/>
			</request> 
			<response status="200"> 
				<!-- Multi-Response type not support!!!, then use generic response with status. element="message:Structure" -->
				<representation mediaType="application/vnd.sdmx.structure+xml;version=2.1"/>
			</response> 
			<response status="400 401 404 413 500 501 503"> 
			<!-- Multi-Response type not support!!!, then use generic response with status. element="message:Error" -->
				<representation mediaType="application/vnd.sdmx.error+xml;version=2.1"/> 
			</response> 
		</method>
	</resource_type>


