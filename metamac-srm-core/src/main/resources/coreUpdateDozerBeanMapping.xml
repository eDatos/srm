<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<configuration>
		<custom-converters>
			<converter type="org.siemac.metamac.core.common.dozer.Date2JodaTimeConverter">
				<class-a>org.joda.time.DateTime</class-a>
				<class-b>java.util.Date</class-b>
			</converter>
		</custom-converters>
	</configuration>

	<!-- ***********************************************************
	 ONLY CLASS WITH DIRECT ID FIELD
	**************************************************************** -->
	
	<mapping>
		<class-a>org.siemac.metamac.core.common.dto.IdentityDto</class-a>
  		<class-b>org.siemac.metamac.srm.core.base.domain.AnnotableArtefact</class-b>
		<field>
			<a>id</a>
			<b is-accessible="true">id</b>
		</field>
		<field>
			<a>uuid</a>
			<b is-accessible="true">uuid</b>
		</field>
	</mapping>
	
	<mapping>
		<class-a>org.siemac.metamac.core.common.dto.InternationalStringDto</class-a>
  		<class-b>org.siemac.metamac.core.common.ent.domain.InternationalString</class-b>
		<field>
			<a>id</a>
			<b is-accessible="true">id</b>
		</field>
	</mapping>
	
	<mapping>
		<class-a>org.siemac.metamac.core.common.dto.LocalisedStringDto</class-a>
  		<class-b>org.siemac.metamac.core.common.ent.domain.LocalisedString</class-b>
		<field>
			<a>id</a>
			<b is-accessible="true">id</b>
		</field>
	</mapping>
	
	<mapping>
		<class-a>org.siemac.metamac.core.common.dto.ExternalItemBtDto</class-a>
  		<class-b>org.siemac.metamac.core.common.bt.domain.ExternalItemBt</class-b>
		<field>
			<a>type</a>
			<b is-accessible="true">type</b>
		</field>
	</mapping>
	
	<mapping>
		<class-a>org.siemac.metamac.core.common.dto.IdentityDto</class-a>
  		<class-b>org.siemac.metamac.srm.core.structure.domain.AttributeRelationship</class-b>
		<field>
			<a>id</a>
			<b is-accessible="true">id</b>
		</field>
		<field>
			<a>uuid</a>
			<b is-accessible="true">uuid</b>
		</field>
	</mapping>
	
	<mapping>
		<class-a>org.siemac.metamac.core.common.dto.IdentityDto</class-a>
  		<class-b>org.siemac.metamac.srm.core.base.domain.Representation</class-b>
		<field>
			<a>id</a>
			<b is-accessible="true">id</b>
		</field>
		<field>
			<a>uuid</a>
			<b is-accessible="true">uuid</b>
		</field>
	</mapping>
	
	<mapping>
		<class-a>org.siemac.metamac.core.common.dto.IdentityDto</class-a>
  		<class-b>org.siemac.metamac.srm.core.base.domain.Annotation</class-b>
		<field>
			<a>id</a>
			<b is-accessible="true">id</b>
		</field>
		<field>
			<a>uuid</a>
			<b is-accessible="true">uuid</b>
		</field>
	</mapping>
	
	<mapping>
		<class-a>org.siemac.metamac.core.common.dto.IdentityDto</class-a>
  		<class-b>org.siemac.metamac.srm.core.base.domain.Facet</class-b>
		<field>
			<a>id</a>
			<b is-accessible="true">id</b>
		</field>
		<field>
			<a>uuid</a>
			<b is-accessible="true">uuid</b>
		</field>
	</mapping>
	
	<!-- ***********************************************************
	 EXCLUDED
	**************************************************************** -->
	
	<!-- Because DataAttribute.relateTO is a AttributeRelationship class and the abstract class, 
	cannot be instantiated -->
	<mapping>
		<class-a>org.siemac.metamac.domain.srm.dto.DataAttributeDto</class-a>
  		<class-b >org.siemac.metamac.srm.core.structure.domain.DataAttribute</class-b>
		<field-exclude> 
		  <a>relateTo</a> 
		  <b>relateTo</b> 
		</field-exclude>         
	</mapping>
	
	<!-- Because Component.localRepresentation is a Representation class and the abstract class, 
	cannot be instantiated -->
	<mapping>
		<class-a>org.siemac.metamac.domain.srm.dto.ComponentDto</class-a>
  		<class-b >org.siemac.metamac.srm.core.base.domain.Component</class-b>
		<field-exclude> 
		  <a>localRepresentation</a> 
		  <b>localRepresentation</b> 
		</field-exclude>         
	</mapping>
	

	

</mappings>